<Page x:Class="sprAirport.Project.Entry.PageAircrafts"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:sprAirport.Project.Entry"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="PageAircrafts">

    <Page.Resources>
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="10" 
                                BorderThickness="0"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style x:Key="BackButtonStyle" TargetType="Button" BasedOn="{StaticResource RoundedButtonStyle}">
            <Setter Property="Background" Value="#FF525961"/>
        </Style>
        <Style x:Key="DefaultButtonStyle" TargetType="Button" BasedOn="{StaticResource RoundedButtonStyle}">
            <Setter Property="Background" Value="#EE88A6EE"/>
        </Style>
    </Page.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Padding="20">
        <Grid HorizontalAlignment="Center" MaxWidth="600">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Управление самолетами"
                       FontSize="18"
                       FontWeight="Bold"
                       HorizontalAlignment="Right"
                       Margin="0,0,0,20"
                       Grid.Row="0"/>

            <DataGrid x:Name="AircraftsDataGrid" AutoGenerateColumns="False" SelectionMode="Single" IsReadOnly="True" Height="250" Margin="0,0,0,10" Grid.Row="1"
          HorizontalScrollBarVisibility="Auto">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                    <DataGridTextColumn Header="Номер" Binding="{Binding Number}" Width="*"/>
                    <DataGridTextColumn Header="Модель" Binding="{Binding Model}" Width="2*"/>
                    <DataGridTextColumn Header="Кол-во мест" Binding="{Binding Seats}" Width="*"/>
                    <DataGridTextColumn Header="Скорость" Binding="{Binding Speed}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>


            <StackPanel Grid.Row="2" Margin="0,10,0,0">
                <TextBlock Text="Номер" FontWeight="Bold" Margin="0,5,0,0"/>
                <TextBox x:Name="NumberTextBox" Height="30" Margin="0,5"/>

                <TextBlock Text="Модель" FontWeight="Bold" Margin="0,5,0,0"/>
                <TextBox x:Name="ModelTextBox" Height="30" Margin="0,5"/>

                <StackPanel Orientation="Horizontal" Margin="0,5,0,10">
                    <StackPanel>
                        <TextBlock Text="Кол-во мест" FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBox x:Name="SeatsTextBox" Height="30" Width="100" Margin="0,0,10,0"/>
                    </StackPanel>
                    <StackPanel>
                        <TextBlock Text="Скорость" FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBox x:Name="SpeedTextBox" Height="30" Width="100"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                    <Button x:Name="AddAircraftButton" Content="Добавить" Width="100" Margin="5" Style="{StaticResource DefaultButtonStyle}"/>
                    <Button x:Name="UpdateAircraftButton" Content="Изменить" Width="100" Margin="5" Style="{StaticResource DefaultButtonStyle}"/>
                    <Button x:Name="DeleteAircraftButton" Content="Удалить" Width="100" Margin="5" Style="{StaticResource DefaultButtonStyle}"/>
                    <Button Content="Назад" Width="100" HorizontalAlignment="Center" Margin="5" Click="BackButton_Click" Style="{StaticResource BackButtonStyle}"/>
                </StackPanel>

               
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Page>
