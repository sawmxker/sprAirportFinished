<Page x:Class="sprAirport.Project.Entry.PageReports"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:sprAirport.Project.Entry"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="Статистика и отчёты">

    <Page.Resources>
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="10" 
                                BorderThickness="0"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style x:Key="BackButtonStyle" TargetType="Button" BasedOn="{StaticResource RoundedButtonStyle}">
            <Setter Property="Background" Value="#FF525961"/>
        </Style>
        <Style x:Key="DefaultButtonStyle" TargetType="Button" BasedOn="{StaticResource RoundedButtonStyle}">
            <Setter Property="Background" Value="#EE88A6EE"/>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Статистика и отчёты" FontSize="24" FontWeight="Bold" Grid.Row="0" Margin="0,0,0,20"/>

        <StackPanel Orientation="Horizontal" Grid.Row="1" VerticalAlignment="Center" Margin="0,0,0,10">
            <TextBlock Text="Выберите маршрут:" VerticalAlignment="Center" Margin="0,0,10,0"/>

            <ComboBox x:Name="RoutesComboBox" Width="250" DisplayMemberPath="Number" SelectedValuePath="Id" SelectionChanged="RoutesComboBox_SelectionChanged"/>
        </StackPanel>

        <CheckBox x:Name="LowFillCheckBox" Content="Показывать рейсы, заполненные менее чем на 70%" Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Center" Checked="FilterCheckBox_Changed" Unchecked="FilterCheckBox_Changed" Margin="0,0,0,10"/>

        <DataGrid x:Name="ReportsDataGrid" Grid.Row="2" AutoGenerateColumns="False" IsReadOnly="True" SelectionMode="Single" Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Маршрут" Binding="{Binding RouteNumber}" Width="*"/>
                <DataGridTextColumn Header="От" Binding="{Binding FromCity}" Width="*"/>
                <DataGridTextColumn Header="Куда" Binding="{Binding ToCity}" Width="*"/>
                <DataGridTextColumn Header="Самолёт (модель)" Binding="{Binding AircraftModel}" Width="*"/>
                <DataGridTextColumn Header="Самолёт (номер)" Binding="{Binding AircraftNumber}" Width="*"/>
                <DataGridTextColumn Header="Дата вылета" Binding="{Binding DepartureDate, StringFormat=dd.MM.yyyy HH:mm}" Width="150"/>
                <DataGridTextColumn Header="Дата прибытия" Binding="{Binding ArrivalDate, StringFormat=dd.MM.yyyy HH:mm}" Width="150"/>
                <DataGridTextColumn Header="Оценочное время полёта" Binding="{Binding EstimatedFlightTimeDisplay}" Width="130"/>
                <DataGridTextColumn Header="Свободных мест" Binding="{Binding FreeSeats}" Width="100"/>
                <DataGridTextColumn Header="Продано билетов" Binding="{Binding TicketsSold}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <TextBlock x:Name="SummaryTextBlock" Grid.Row="3" FontWeight="Bold" Margin="0,10,0,0" TextWrapping="Wrap"/>

        <StackPanel Orientation="Horizontal" Grid.Row="4" HorizontalAlignment="Left" Margin="0,10,0,0">
            <Button x:Name="BackButton" Content="Назад" Width="100" Height="30" Click="BackButton_Click" Style="{StaticResource BackButtonStyle}"/>
        </StackPanel>
    </Grid>
</Page>
