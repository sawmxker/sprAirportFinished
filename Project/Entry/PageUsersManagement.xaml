<Page x:Class="sprAirport.Project.Entry.PageUsersManagement"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      d:DesignHeight="600" d:DesignWidth="800"
      Title="PageUsersManagement">

    <Page.Resources>
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="10" 
                                BorderThickness="0"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style x:Key="BackButtonStyle" TargetType="Button" BasedOn="{StaticResource RoundedButtonStyle}">
            <Setter Property="Background" Value="#FF525961"/>
        </Style>
        <Style x:Key="DefaultButtonStyle" TargetType="Button" BasedOn="{StaticResource RoundedButtonStyle}">
            <Setter Property="Background" Value="#EE88A6EE"/>
        </Style>
    </Page.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Padding="20">
        <Grid HorizontalAlignment="Center" MaxWidth="600">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Управление пользователями"
                       FontSize="18"
                       FontWeight="Bold"
                       HorizontalAlignment="Right"
                       Margin="0,0,0,20"
                       Grid.Row="0"/>

            <DataGrid x:Name="UsersDataGrid" AutoGenerateColumns="False" SelectionMode="Single" IsReadOnly="True" Height="250" Margin="0,0,0,10" Grid.Row="1"
                      HorizontalScrollBarVisibility="Auto">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                    <DataGridTextColumn Header="Имя пользователя" Binding="{Binding Username}" Width="*"/>
                    <DataGridTextColumn Header="ФИО" Binding="{Binding FullName}" Width="2*"/>
                    <DataGridTextColumn Header="Роль" Binding="{Binding RoleName}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>

            <StackPanel Grid.Row="2" Margin="0,10,0,0">

                <TextBlock Text="Имя пользователя" FontWeight="Bold" Margin="0,5,0,0"/>
                <TextBox x:Name="UsernameTextBox" Height="30" Margin="0,5"/>

                <TextBlock Text="Пароль" FontWeight="Bold" Margin="0,5,0,0"/>
                <PasswordBox x:Name="PasswordBox" Height="30" Margin="0,5"/>

                <TextBlock Text="ФИО" FontWeight="Bold" Margin="0,5,0,0"/>
                <TextBox x:Name="FullNameTextBox" Height="30" Margin="0,5"/>

                <TextBlock Text="Роль" FontWeight="Bold" Margin="0,5,0,10"/>
                <ComboBox x:Name="RolesComboBox" DisplayMemberPath="Name" SelectedValuePath="Id" Margin="0,5"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                    <Button x:Name="AddUserButton" Content="Добавить" Width="100" Margin="5" Style="{StaticResource DefaultButtonStyle}"/>
                    <Button x:Name="UpdateUserButton" Content="Изменить" Width="100" Margin="5" Style="{StaticResource DefaultButtonStyle}"/>
                    <Button x:Name="DeleteUserButton" Content="Удалить" Width="100" Margin="5" Style="{StaticResource DefaultButtonStyle}"/>
                    <Button Content="Назад" Width="100"  HorizontalAlignment="Center" Margin="5" Click="BackButton_Click" Style="{StaticResource BackButtonStyle}"/>
                </StackPanel>

                

            </StackPanel>
        </Grid>
    </ScrollViewer>
</Page>
