<Page x:Class="sprAirport.Project.Entry.PageFlights"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:sprAirport.Project.Entry"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="PageFlights">

    <Page.Resources>
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="10" 
                                BorderThickness="0"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style x:Key="BackButtonStyle" TargetType="Button" BasedOn="{StaticResource RoundedButtonStyle}">
            <Setter Property="Background" Value="#FF525961"/>
        </Style>
        <Style x:Key="DefaultButtonStyle" TargetType="Button" BasedOn="{StaticResource RoundedButtonStyle}">
            <Setter Property="Background" Value="#EE88A6EE"/>
        </Style>
    </Page.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Padding="20">
        <Grid HorizontalAlignment="Center" MaxWidth="600">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Управление рейсами"
                       FontSize="18"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"
                       Grid.Row="0"/>

            <DataGrid x:Name="FlightsDataGrid" AutoGenerateColumns="False" SelectionMode="Single" IsReadOnly="True" Height="250" Margin="0,0,0,10" Grid.Row="1"
                      HorizontalScrollBarVisibility="Auto" SelectionChanged="FlightsDataGrid_SelectionChanged">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                    <DataGridTextColumn Header="Маршрут" Binding="{Binding Route}" Width="*"/>
                    <DataGridTextColumn Header="Самолёт (номер)" Binding="{Binding Aircraft}" Width="2*"/>
                    <DataGridTextColumn Header="Дата отлета" Binding="{Binding DepartureDate, StringFormat=dd.MM.yyyy HH:mm}" Width="*"/>
                    <DataGridTextColumn Header="Дата прибытия" Binding="{Binding ArrivalDate, StringFormat=dd.MM.yyyy HH:mm}" Width="*"/>
                    <DataGridTextColumn Header="Билетов продано" Binding="{Binding TicketsSold}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>

            <StackPanel Grid.Row="2" Margin="0,10,0,0">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <StackPanel Width="280" Margin="0,0,10,0">
                        <TextBlock Text="Маршрут" FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBox x:Name="RouteTextBox" Height="30"/>
                    </StackPanel>

                    <StackPanel Width="280">
                        <TextBlock Text="Самолёт" FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBox x:Name="AircraftTextBox" Height="30"/>
                    </StackPanel>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,10">
                    <StackPanel Width="130" Margin="0,0,10,0">
                        <TextBlock Text="Дата отлёта" FontWeight="Bold" Margin="0,0,0,5"/>
                        <DatePicker x:Name="DepartureDatePicker" Height="30"/>
                    </StackPanel>

                    <StackPanel Width="80" Margin="0,0,10,0">
                        <TextBlock Text="Время отлёта" FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBox x:Name="DepartureTimeTextBox" Height="30" Text="00:00"/>
                    </StackPanel>

                    <StackPanel Width="130" Margin="0,0,10,0">
                        <TextBlock Text="Дата прибытия" FontWeight="Bold" Margin="0,0,0,5"/>
                        <DatePicker x:Name="ArrivalDatePicker" Height="30"/>
                    </StackPanel>

                    <StackPanel Width="80" Margin="0,0,10,0">
                        <TextBlock Text="Время прибытия" FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBox x:Name="ArrivalTimeTextBox" Height="30" Text="00:00"/>
                    </StackPanel>

                    <StackPanel Width="100">
                        <TextBlock Text="Билетов продано" FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBox x:Name="TicketsSoldTextBox" Height="30"/>
                    </StackPanel>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                    <Button x:Name="AddFlightButton" Content="Добавить" Width="100" Margin="5" Style="{StaticResource DefaultButtonStyle}"/>
                    <Button x:Name="UpdateFlightButton" Content="Изменить" Width="100" Margin="5" Style="{StaticResource DefaultButtonStyle}"/>
                    <Button x:Name="DeleteFlightButton" Content="Удалить" Width="100" Margin="5" Style="{StaticResource DefaultButtonStyle}"/>
                    <Button x:Name="BackButton" Content="Назад" Width="100" Margin="5" Click="BackButton_Click" Style="{StaticResource BackButtonStyle}"/>
                </StackPanel>

            </StackPanel>
        </Grid>
    </ScrollViewer>
</Page>
