<Page x:Class="sprAirport.Project.Entry.PageRoutes"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:sprAirport.Project.Entry"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="PageRoutes">

    <Page.Resources>
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="10" 
                                BorderThickness="0"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style x:Key="BackButtonStyle" TargetType="Button" BasedOn="{StaticResource RoundedButtonStyle}">
            <Setter Property="Background" Value="#FF525961"/>
        </Style>
        <Style x:Key="DeleteButtonStyle" TargetType="Button" BasedOn="{StaticResource BackButtonStyle}"/>
        <Style x:Key="DefaultButtonStyle" TargetType="Button" BasedOn="{StaticResource RoundedButtonStyle}">
            <Setter Property="Background" Value="#EE88A6EE"/>
        </Style>
    </Page.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Padding="20">
        <Grid HorizontalAlignment="Center" MaxWidth="600">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Управление маршрутами"
                       FontSize="18"
                       FontWeight="Bold"
                       HorizontalAlignment="Right"
                       Margin="0,0,0,20"
                       Grid.Row="0"/>

            <DataGrid x:Name="RoutesDataGrid" AutoGenerateColumns="False" SelectionMode="Single" IsReadOnly="True" Height="250" Margin="0,0,0,10" Grid.Row="1"
                      HorizontalScrollBarVisibility="Auto">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                    <DataGridTextColumn Header="Номер" Binding="{Binding Number}" Width="*"/>
                    <DataGridTextColumn Header="Дистанция" Binding="{Binding Distance}" Width="2*"/>
                    <DataGridTextColumn Header="От" Binding="{Binding FromCity}" Width="*"/>
                    <DataGridTextColumn Header="Куда" Binding="{Binding ToCity}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>

            <StackPanel Grid.Row="2" Margin="0,10,0,0">

                <Grid Margin="0,0,0,10" HorizontalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="150"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Margin="5">
                        <TextBlock Text="Номер" FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBox x:Name="NumberTextBox" Height="30"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="5">
                        <TextBlock Text="Дистанция" FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBox x:Name="DistanceTextBox" Height="30"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2" Margin="5">
                        <TextBlock Text="От" FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBox x:Name="FromCityTextBox" Height="30"/>
                    </StackPanel>

                    <StackPanel Grid.Column="3" Margin="5">
                        <TextBlock Text="Куда" FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBox x:Name="ToCityTextBox" Height="30"/>
                    </StackPanel>
                </Grid>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10" >
                    <Button x:Name="AddRouteButton" Content="Добавить" Width="120" Margin="5" Style="{StaticResource DefaultButtonStyle}"/>
                    <Button x:Name="UpdateRouteButton" Content="Изменить" Width="120" Margin="5" Style="{StaticResource DefaultButtonStyle}"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:Name="BackButton" Content="Назад" Width="120" Margin="5" Click="BackButton_Click" Style="{StaticResource BackButtonStyle}"/>
                    <Button x:Name="DeleteRouteButton" Content="Удалить" Width="120" Margin="5" Style="{StaticResource BackButtonStyle}"/>
                </StackPanel>

            </StackPanel>

        </Grid>
    </ScrollViewer>
</Page>
