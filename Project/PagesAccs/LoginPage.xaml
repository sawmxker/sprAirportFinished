<Page x:Class="sprAirport.Project.PagesAccs.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:sprAirport.Project.PagesAccs"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="LoginPage">

    <Page.Resources>
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="10" 
                                BorderThickness="0"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

            <Border CornerRadius="10" Padding="30">
                <StackPanel>
                    <TextBlock Text="Вход в систему" 
                               FontSize="18" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Center" 
                               Margin="0,0,0,20"/>

                    <TextBlock Text="Логин" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBox x:Name="txtUsername" 
                             Width="250" Height="35" FontSize="14"
                             Margin="0,5,0,15" Padding="10,5"/>

                    <TextBlock Text="Пароль" FontWeight="Bold" Margin="0,0,0,5"/>
                    <PasswordBox x:Name="pbPassword" 
                                 Width="250" Height="35" FontSize="14"
                                 Margin="0,5,0,20" Padding="10,5"/>

                    <Button x:Name="btnLogin"
                            Content="Войти"
                            Width="120" Height="35" FontSize="14"
                            Background="#EE88A6EE" Cursor="Hand"
                            Style="{StaticResource RoundedButtonStyle}"
                            Click="btnLogin_Click"
                            Margin="0,0,0,10"/>

                    <TextBlock Text="Нет аккаунта?" 
                               HorizontalAlignment="Center" 
                               FontSize="12" Foreground="Gray"
                               Margin="0,10,0,5"/>

                    <Button x:Name="btnRegIn"
                            Content="Зарегистрироваться"
                            Width="150" Height="30" FontSize="12"
                            Background="#FF525961" Cursor="Hand"
                            Style="{StaticResource RoundedButtonStyle}"
                            Click="btnRegIn_Click"/>

                    <TextBlock x:Name="txtMessage" 
                               Text="" Foreground="#ffc821" 
                               Margin="0,10,0,0" TextWrapping="Wrap" 
                               Width="250" HorizontalAlignment="Center"
                               TextAlignment="Center"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Page>